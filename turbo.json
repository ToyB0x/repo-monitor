{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "generate": {
      "dependsOn": ["^generate"],
      "inputs": ["prisma/**"]
    },
    "build": {
      "dependsOn": ["generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$"]
    },
    "typecheck": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
